<% content_for :title, "EmailBolt" %>
<% set_meta_tags :title => 'EmailBolt Security Tool' %>
<% set_meta_tags :description => "Run a security check on the data that is currently tied to your email address." %>
<% if @lookup != nil %>
<% temparray = JSON.parse(get_data(@lookup.to_s)) %>
<% temparray = temparray.keys %>
<% threats = temparray.length %>
<% total = 12 - threats %>
<% end %>
<style>
#custom-tweet-button a {
    height: 128px;
    width: 128px;
    border-style: none !important;
}

</style>
<br />
    <% if total == nil %>
    <div class="row">
    <div class="large-12 smallcolumns">
    <div class="large-12 smallcolumns">
    <h3>See what your email is saying about you!</h3>
    <p>Your online identity is being mapped by the good, the bad, and the ugly. Use our tool to see what others know about you from your email.</p>
    </div>
    <div class="row">
    <%#= image_tag ("magnifying128.png"), :class => "right large-4 medium-6 hide-for-small-only" %>
    <div class="large-12 medium-12 small-12 smallcolumns right"><%= render ('shared/emailcheck') %></div>
    </div>
    </div>
    </div>
    <% end %>
    <% if total != nil %>
    <div class="row">
    <h3>Results</h3>
    <br />
    
        <div class="row">

            <div class="large-12 columns">

                <div class="large-4 medium-5 small-12 columns left">
                <canvas id="results" width="500px" height="400px"></canvas>
                </div>

                <div class="large-8 medium-7 small-12 columns left">
                    
                    <div class="panel large-12 medium-12 small-12 columns">
                    
                    <h4>Your security status.</h4>
                        <div class="large-4 medium-6 small-12 columns">
                            <style type="text/css" media="screen">
                            #custom-tweet-button a {
                                display: block;
                                padding: 0px;
                                background: url('https://cdn3.iconfinder.com/data/icons/free-social-icons/67/twitter_square-128.png') 1px center no-repeat;
                                border: 1px solid #ccc;
                                background-size:auto 100%;
                            }
                            #custom-facebook-button a {
                                display: block;
                                padding: 0px;
                                background: url('https://cdn3.iconfinder.com/data/icons/free-social-icons/67/facebook_square-128.png') 1px center no-repeat;
                                border: 1px solid #ccc;
                                background-size:auto 100%;
                            }
                            </style>
                        <div id="custom-tweet-button">
                        <a href="https://twitter.com/share?url=http%3A%2F%2Fwww.emailbolt.com%2Flookup&text=My%20email%20is%20saying%20<%=temparray.length %>%20things%20about%20me.%20What%20does%20yours%20say%20about%20you%3F%20%23lockitdown%20%40EmailBolt" target="_blank"></a>
                        </div>
        
                        </div>
                    
                        <div class="large-4 medium-6 small-12 columns">
                            <div class="large-4 medium-2 small-2 columns" style="height:40px;width:40px;background-color:#FF8153;"></div>
                            <div class="large-8 medium-8 small-9 columns right"><h6>There are <%= threats %> data point matches.</h6></div>
                        </div>
                        <div class="large-4 medium-6 small-12 columns">
                            <div class="large-4 medium-2 small-2 columns" style="height:40px;width:40px;background-color:#FFEA88;"></div>
                            <div class="large-8 medium-8 small-9 columns right"><h6>There are <%= total %> data points missing.</h6></div>
                        </div>                        
                        <% if temparray.length == 0 %>
                        <div class="large-12 small-12 columns"><br />
                            <h6>There is no information currently tied to your email address that can be purchased by third parties. To keep it that way, use bolts to create private indiviual addresses for your different contacts and services.</h6></div>
                        </div>
                        <% end %>
                            
                    </div>


                </div>

            </div>
        </div>


    <br />


        <!-- Thumbnails -->
        <% if temparray.length != 0 %>
            <h4>What's publicly available for your email <%= @lookup %></h4>
        <% end %>
            <div class="large-12 columns">

                <% temparray.each do |b| %>

                <div class="large-3 medium-4 small-6 columns left">
                    <%= image_tag ('data/' + b + '256.png'), :style => "width:100%;height:auto;max-width:256px;max-height:256px;" %>
                    <div class="panel" class="small-panel" style="min-height:100px">
                        <h4><%= b.humanize %></h4>
                    </div>
                </div>

                <% end %>    

            </div>

        <!-- End Thumbnails -->

        
    <% end %>

<style>
    canvas
        {
        width: 100% !important;
        max-width: 800px;
        height: auto !important;
        }
</style>

<script>
var buyerData = [
    {
        label : 'Sleep',
        labelColor : 'white',
        labelFontSize : '16',
        value : <%= threats %>,
        color : "#FF8153"
    },
    {
        label : 'Sleep',
        labelColor : 'white',
        labelFontSize : '16',
        value : <%= total %>,
        color : "#FFEA88"
    }
];

var pieOptions = {
    segmentShowStroke : true,
    segmentStrokeColor : "#fff",
    segmentStrokeWidth : 2,
    percentageInnerCutout : 50,
    animation : true,
    animationSteps : 100,
    animationEasing : "easeOutBounce",
    animateRotate : true,
    animateScale : false,
    onAnimationComplete : "revealInfo()",
    labelFontFamily : "Arial",
    labelFontStyle : "normal",
    labelFontSize : 24,
    labelFontColor : "#666"
}

function revealInfo()
{
    alert("Hello World!");
}

var results = document.getElementById('results').getContext('2d');
new Chart(results).Pie(buyerData,pieOptions);
</script>
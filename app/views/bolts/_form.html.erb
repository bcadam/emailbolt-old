<%= simple_form_for(@bolt) do |f| %>
  <%= f.error_notification %>
	<% temp = current_user.id %>
	<%#= temp = temp.to_i %>
  <div class="form-inputs">
    <%= f.input :address %>
    <%= f.hidden_field :user_id, :value => temp %>
    <%= f.input :description %>
    <%= f.hidden_field :routeid %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
